{
    "manifest_version": 3,
    "name": "Chat with YouTube",
    "version": "0.0.1",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "webRequest"
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    },
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "dist/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "dist/content.js"
            ]
        }
    ],
    "action": {}
}